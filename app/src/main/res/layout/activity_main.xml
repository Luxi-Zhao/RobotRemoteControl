<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lucyzhao.robotremotecontrol.MainActivity">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/button"
        android:onClick="imageViewOnClick"
        android:layout_above="@+id/msg0_button"
        android:layout_toEndOf="@+id/msg1_button"
        android:layout_marginStart="77dp"
        android:id="@+id/imageView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send 1"
        android:onClick="send1"
        android:id="@+id/msg1_button"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/enable_bluetooth"
        android:layout_alignEnd="@+id/enable_bluetooth" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg1_button"
        android:layout_alignEnd="@+id/msg1_button"
        android:layout_marginTop="34dp"
        android:text="send 0"
        android:onClick="send0"
        android:id="@+id/msg0_button"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bluetooth"
        android:id="@+id/enable_bluetooth"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp" />

</RelativeLayout>
