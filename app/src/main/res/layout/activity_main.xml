<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.lucyzhao.robotremotecontrol.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send 1"
        android:onClick="send1"
        android:id="@+id/msg1_button"
        android:layout_alignBottom="@+id/msg0_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send 2"
        android:onClick="send2"
        android:id="@+id/msg2_button"
        android:layout_alignBaseline="@+id/msg1_button"
        android:layout_alignBottom="@+id/msg1_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send 0"
        android:onClick="send0"
        android:id="@+id/msg0_button"
        android:layout_marginTop="41dp"
        android:layout_marginStart="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
